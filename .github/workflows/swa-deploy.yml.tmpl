name: SWA Deploy (Frontend)

on:
  workflow_dispatch:

env:
  NODE_VERSION: '20'

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node ${{ env.NODE_VERSION }}
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}

      - name: Build Frontend
        working-directory: frontend
        run: |
          npm ci
          npm run build

      # NOTE: Prefer using the Azure-generated workflow if SWA was created via Portal.
      # Verify the exact secret name Azure created for the token and update below.
      - name: Deploy to Azure Static Web Apps
        uses: Azure/static-web-apps-deploy@v1
        with:
          azure_static_web_apps_api_token: ${{ secrets.<SWA_TOKEN_SECRET_NAME> }}
          action: 'upload'
          app_location: 'frontend'
          output_location: 'dist'
