import express from 'express'
import cors from 'cors'

const app = express()
const port = Number(process.env.PORT || '<API_PORT:3001>')

const origins = (process.env.CORS_ORIGINS || `http://localhost:<FRONTEND_PORT:3000>`)
  .split(',')
  .map(o => o.trim())

app.use(cors({ origin: origins }))
app.use(express.json())

app.get('/healthz', (_req, res) => {
  res.json({ ok: true })
})

